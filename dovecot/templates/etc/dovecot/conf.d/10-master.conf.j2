service auth {
  # auth_socket_path points to this userdb socket by default. It's typically
  # used by dovecot-lda, doveadm, possibly imap process, etc. Users that have
  # full permissions to this socket are able to get a list of all usernames and
  # get the results of everyone's userdb lookups.
  #
  # The default 0666 mode allows anyone to connect to the socket, but the
  # userdb lookups will succeed only if the userdb returns an "uid" field that
  # matches the caller process's UID. Also if caller's uid or gid matches the
  # socket's uid or gid the lookup succeeds. Anything else causes a failure.
  #
  # To give the caller full permissions to lookup all users, set the mode to
  # something else than 0666 and Dovecot lets the kernel enforce the
  # permissions (e.g. 0777 allows everyone full permissions).
  {{ '#' if not dovecot__master_auth__auth_userdb }}unix_listener auth-userdb {
    {{ '#' if not dovecot__master_auth__auth_userdb }}mode = {{ dovecot__master_auth__auth_userdb__mode }}
    {{ '#' if not dovecot__master_auth__auth_userdb }}user = {{ dovecot__master_auth__auth_userdb__user }}
    {{ '#' if not dovecot__master_auth__auth_userdb }}group = {{ dovecot__master_auth__auth_userdb__group }}
  {{ '#' if not dovecot__master_auth__auth_userdb }}}

  # Postfix smtp-auth
  {{ '#' if dovecot__master_auth__smtp_auth | length == 0 }}unix_listener {{ dovecot__master_auth__smtp_auth }} {
  {{ '#' if dovecot__master_auth__smtp_auth | length == 0 }}  mode = 0666
  {{ '#' if dovecot__master_auth__smtp_auth | length == 0 }}}

  # Auth process is run as this user.
  {{ '#' if dovecot__master_auth__user | length == 0 }}user = {{ dovecot__master_auth__user }}
}

service auth-worker {
  # Auth worker process is run as root by default, so that it can access
  # /etc/shadow. If this isn't necessary, the user should be changed to
  # $default_internal_user.
  {{ '#' if dovecot__master_auth__auth_worker__user | length == 0 }}user = {{ dovecot__master_auth__auth_worker__user }}
}

service dict {
  # If dict proxy is used, mail processes should have access to its socket.
  # For example: mode=0660, group=vmail and global mail_access_groups=vmail
  unix_listener dict {
    {{ '#' if dovecot__master_auth__dict__mode | length == 0 }}mode = {{ dovecot__master_auth__dict__mode }}
    {{ '#' if dovecot__master_auth__dict__user | length == 0 }}user = {{ dovecot__master_auth__dict__user }}
    {{ '#' if dovecot__master_auth__dict__group | length == 0 }}group = {{ dovecot__master_auth__dict__group }}
  }
}
