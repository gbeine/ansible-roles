{{ '#' if dovecot__master_default_process_limit | length == 0 }}default_process_limit = {{ dovecot__master_default_process_limit | default(100) }}
{{ '#' if dovecot__master_default_client_limit | length == 0 }}default_client_limit = {{ dovecot__master_default_client_limit | default(1000) }}

# Default VSZ (virtual memory size) limit for service processes. This is mainly
# intended to catch and kill processes that leak memory before they eat up
# everything.
{{ '#' if dovecot__master_default_vsz_limit | length == 0 }}default_vsz_limit = {{ dovecot__master_default_vsz_limit | default('256M') }}

# Login user is internally used by login processes. This is the most untrusted
# user in Dovecot system. It shouldn't have access to anything at all.
{{ '#' if dovecot__master_default_login_user | length == 0 }}default_login_user = {{ dovecot__master_default_login_user | default('dovenull') }}

# Internal user is used by unprivileged processes. It should be separate from
# login user, so that login processes can't disturb other processes.
{{ '#' if dovecot__master_default_internal_user | length == 0 }}default_internal_user = {{ dovecot__master_default_internal_user | default('dovecot') }}

service imap-login {
  inet_listener imap {
    {{ '#' if dovecot__master_imap_login__imap__port == 0 }}port = {{ dovecot__master_imap_login__imap__port }}
  }
  inet_listener imaps {
    {{ '#' if dovecot__master_imap_login__imaps__port == 0 }}port = {{ dovecot__master_imap_login__imaps__port }}
    {{ '#' if dovecot__master_imap_login__imaps__port == 0 }}ssl = {{ dovecot__master_imap_login__imaps__ssl | ternary('yes', 'no') }}
  }

  # Number of connections to handle before starting a new process. Typically
  # the only useful values are 0 (unlimited) or 1. 1 is more secure, but 0
  # is faster. <doc/wiki/LoginProcess.txt>
  {{ '#' if dovecot__master_imap_login__service_count | length == 0 }}service_count = {{ dovecot__master_imap_login__service_count }}

  # Number of processes to always keep waiting for more connections.
  {{ '#' if dovecot__master_imap_login__process_min_avail | length == 0 }}process_min_avail = {{ dovecot__master_imap_login__process_min_avail }}

  # If you set service_count=0, you probably need to grow this.
  {{ '#' if dovecot__master_imap_login__vsz_limit | length == 0 }}vsz_limit = {{ dovecot__master_imap_login__vsz_limit }}
}

