# Define default SSL configuration options

ssl_session_cache: "{{ nginx__ssl_session_cache }}"
ssl_session_timeout: "{{ nginx__ssl_session_timeout }}"
ssl_session_ickets: "{{ nginx__ssl_session_tickets }}"

ssl_protocols {{ nginx__ssl_protocols | join(' ') }};
ssl_prefer_server_ciphers {{ nginx__ssl_prefer_server_ciphers }};
ssl_ciphers {{ nginx__ssl_ciphers | join(' ') }};
{% if nginx__ssl_dhparam != '' %}
ssl_dhparam {{ nginx__ssl_dhparam }};
{% endif %}
{% if nginx__ssl_curve %}
ssl_ecdh_curve {{ nginx__ssl_curve }};
{% endif %}
