[Unit]
Description=nextcloud cleanup

[Service]
Type=simple
User=www-data
WorkingDirectory={{ nextcloud__path }}
StandardOutput=file:{{ nextcloud__log_path }}/cleanup.log
StandardError=file:{{ nextcloud__log_path }}/cleanup.log
ExecStart=php occ trashbin:cleanup --all-users
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
