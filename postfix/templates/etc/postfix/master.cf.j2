#
# Postfix master process configuration file.  For details on the format
# of the file, see the master(5) manual page (command: "man 5 master" or
# on-line: http://www.postfix.org/master.5.html).
#
# Do not forget to execute "postfix reload" after editing this file.
#
# ==========================================================================
# service type  private unpriv  chroot  wakeup  maxproc command + args
#               (yes)   (yes)   (no)    (never) (100)
# ==========================================================================
{% for service in postfix__master_combined %}
{%   if service.enabled %}
{{ service.service | fill_up_to(9) }} {{ service.type | fill_up_to(6) }} {{ service | value_or_ternary('private', 'y', 'n', '-') | fill_up_to(8) }} {{ service | value_or_ternary('unpriv', 'y', 'n', '-') | fill_up_to(8) }} {{ service | value_or_ternary('chroot', 'y', 'n', '-') | fill_up_to(8) }} {{ service | value_or_default('wakeup', '-') | fill_up_to(8) }} {{ service | value_or_default('maxproc', '-') | fill_up_to(8) }} {{ service.command }}
{%     if service.args is defined %}
  {{ service.args }}
{%     elif service.options is defined %}
{%       for option, value in service.options.items() %}
  -o {{ option }}={{ value }}
{%       endfor %}
{%     endif %}
{%   endif %}
{% endfor %}
